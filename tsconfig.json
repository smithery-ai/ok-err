{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"lib": ["ES2020"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
